{% extends "layout/layout.twig" %}

{% block css %}
    {% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
    {% webpack_entry_js 'layout/datatables' %}
    {% webpack_entry_js 'web/room' %}
{% endblock %}

{% block content %}
  <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2><i class="fas fa-address-card"></i> Room list</h2>
                <hr>
                <table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
                    <thead>
                    <tr>
                        <th>Number</th>
                        <th>Price</th>
                        <th>Room Type</th>
                        <th>Bed Type</th>
                        <th>Operation</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for room in rooms %}                    
                    <tr>
                        <td>{{ room.room_number }}</td>
                        <td>{{ room.room_price }}</td>
                        <td>{{ room.room_type }}</td>
                        <td>{{ room.bed_type }}</td>
                        <td>
                        <button type="button" id="editBt" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editRoom" name="{{ room|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-edit"></i></button>
                        <button type="button" id="deleteBt" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteRoom" name="{{ room|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot></tfoot>
                </table>
                <p></p>
            </div>
        </div>
      </div>
      
<!-- Modal Edit room -->
<div class="modal fade" id="editRoom">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-editRoom" action="edit_room" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Edit Room</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-room">
            <input type="hidden" id="editRoomID" name="id">
            <label for="roomCode">Room Code</label>
            <input type="text" autocomplete="off" class="form-control" id="editRoomCode" name="room_code" required>
          </div>          
          <div class="form-room">
            <label for="roomName">Room Name</label>
            <input type="text" autocomplete="off" class="form-control" id="editRoomName" name="room_name" required>
          </div>
        </div>            
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Modal Delete room -->
<div class="modal fade" id="deleteRoom">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-deleteRoom" action="delete_room" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Delete Room</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-product">
            <input type="hidden" id="deleteRoomID" name="id">
            <label for="roomNname">Do you want to delete room: <span id="deleteRoomName"></span></label>
          </div>                 
          
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger">Delete</button>
          <button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>

{% endblock %}