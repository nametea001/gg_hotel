{% extends "layout/layout.twig" %}

{% block css %}
    {% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
    {% webpack_entry_js 'layout/datatables' %}
    {% webpack_entry_js 'web/bookingCheckIn' %}
{% endblock %}

{% block content %}
  <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2><i class="fa-solid fa-user-check"></i> Booking Check In</h2>
                <label for=" ">     <span ></span></label>
                <button type="button" id="CheckInFromBookingNoBt" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#cencelBookingRoom" ><i style="font-size:15px; width:20px;" class="fa-solid fa-circle-check"></i> Check in From Booking NO</button>
                <form id="form-searchIssue" class="form-inline float-right" action="" method="get">
                  Checkin Date:&nbsp;&nbsp;
                  <input type="text" autocomplete="off" class="form-control" id="searchCheckInDate" name="checkIn" value="{{checkIn}}">&nbsp;&nbsp;
                  <button type="submit" class="btn btn-primary" id="searchIssueBt"><i class="fas fa-search fa-lg"></i> Search</button>
                </form>
                <hr>
                <table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed" style="width:100%">
                    <thead>
                    <tr>
                        <th>Booking No</th>
                        <th>Room Number</th>
                        <th>Room Price/Day</th>
                        <th>Reservation Name</th>
                        <th>Booking Date</th>
                        <th>Date In</th>
                        <th>Date Out</th>
                        <th>Deposit</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Operation</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for booking in bookings %}                    
                    <tr>
                        <td>{{ booking.booking_no }}</td>
                        <td>{{ booking.room_number }}</td>
                        <td>{{ booking.room_price }}</td>
                        <td>{{ booking.deposit }}</td>
                        <td>{{ booking.first_name }}  {{ booking.first_name }}</td>
                        {# <td>{{ booking.booking_date|date('Y-m-d H:i') }}</td> #}
                        <td>{{ booking.booking_date  }}  {{ created_at|date('H:i') }}</td>
                        <td>{{ booking.date_in|date('Y-m-d H:i') }}</td>
                        <td>{{ booking.date_out|date('Y-m-d H:i') }}</td>
                        <td>{{ booking.deposit }}</td>
                        <td>{{ booking.amount }}</td>
                        <td>{{ booking.status }}</td>
                        <td>
                            <button type="button" id="cencelBt" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#cencelBookingRoom" name="{{ booking|json_encode }}"><i style="font-size:15px; width:20px;" class="fa-solid fa-circle-xmark"></i></button>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot></tfoot>
                </table>
                <p></p>
            </div>
        </div>
      </div>

{% endblock %}