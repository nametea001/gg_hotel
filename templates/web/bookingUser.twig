{% extends "layout/layout3.twig" %}

{% block css %}
    {% webpack_entry_css 'layout/datatables' %}
    {% webpack_entry_css 'layout/layout' %}
{% endblock %}

{% block js %}
    {% webpack_entry_js 'layout/datatables' %}
    {% webpack_entry_js 'web/bookingUser' %}
{% endblock %}

{% block content %}
    <br>
    <div class="container">
    <form id="form-searchIssue" class="form-inline " action="" method="get">
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 
            <div class="form-inline" >
                <h6>Room Type:</h6>&nbsp;&nbsp; 
                <select class="form-control" name="room_type">
                    {# <option hidden value="default">Select An Option</option> #}
                    <option value="STANDARD">STANDARD</option>
                    <option value="SUPEIROR">SUPEIROR</option>
                    <option value="DELUXE">DELUXE</option>
                    <option value="SUITE">SUITE</option>
                </select>
            </div>
            &nbsp;&nbsp;&nbsp;&nbsp; 
        <h6>Want to room date:</h6>&nbsp;&nbsp; 
        <input type="text" autocomplete="off" class="form-control" id="searchIssueStartDate" name="startDate" value="{{startDate}}">&nbsp;&nbsp;To&nbsp;&nbsp; 
        <input type="text" autocomplete="off" class="form-control" id="searchIssueEndDate" name="endDate" value="{{endDate}}">&nbsp;&nbsp;
        <button type="submit" class="btn btn-primary" id="searchIssueBt"><i class="fas fa-search fa-lg"></i> Search</button>
    </form>
    {% if error == "Y"%}
    <h1>ERROR</h1>
    {% endif %}
    {# ห้องว่างไหมในวันที่ ต้องการเข้าจอง ถ้า #}
    {% if checkRoom['is_empty'] == "N"%}
    <h1>Not Empty</h1>
    {% endif %}

    {# รายการห้องพัก  #}
    {% if checkRoom['is_empty'] == "Y"%}
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <hr>
                    <table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
                        <thead>
                        <tr>
                            <th>Images</th>
                            <th>Room Number</th>
                            <th>Price</th>
                            <th>Bad Type</th>                        
                            <th>Operation</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for room in rooms %}                    
                        <tr>
                            <td>{{ room.image }}</td>
                            <td>{{ room.room_number }}</td>
                            <td>{{ room.room_price }}</td>
                            <td>{{ room.bed_type }}</td>
                            <td>
                            <button type="button" id="editBt" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editroom" name="{{ room|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-edit"></i></button>
                            <button type="button" id="deleteBt" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteroom" name="{{ room|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot></tfoot>
                    </table>
                    <p></p>
                </div>
            </div>
        </div>
    {% endif %}
    </div>

{% endblock %}
