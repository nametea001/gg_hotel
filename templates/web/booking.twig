{% extends "layout/layout.twig" %}

{% block css %}
    {% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
    {% webpack_entry_js 'layout/datatables' %}
    {% webpack_entry_js 'web/booking' %}
{% endblock %}

{% block content %}
  <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2><i class="fas fa-address-card"></i> Booking list</h2>
                <label for=" ">     <span ></span></label>
                <form id="form-searchIssue" class="form-inline float-right" action="" method="get">
                  Issue Date From:&nbsp;&nbsp;
                  <input type="text" autocomplete="off" class="form-control" id="searchIssueStartDate" name="startDate" value="{{startDate}}">&nbsp;&nbsp;To&nbsp;&nbsp; 
                  <input type="text" autocomplete="off" class="form-control" id="searchIssueEndDate" name="endDate" value="{{endDate}}">&nbsp;&nbsp;
                  <button type="submit" class="btn btn-warning" id="searchIssueBt"><i class="fas fa-search fa-lg"></i> Search</button>
                </form>
                <hr>
                <table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
                    <thead>
                    <tr>
                        <th>Booking No</th>
                        <th>Room Number</th>
                        <th>Price</th>
                        <th>Deposit</th>
                        <th>Reservation Name</th>
                        <th>Booking Date</th>
                        <th>Status</th>
                        <th>Operation</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for booking in bookings %}                    
                    <tr>
                        <td>{{ booking.booking_no }}</td>
                        <td>{{ booking.room_number }}</td>
                        <td>{{ booking.room_price }}</td>
                        <td>{{ booking.deposit }}</td>
                        <td>{{ booking.first_name }}  {{ booking.first_name }}</td>
                        <td>{{ booking.booking_date|date('Y-m-d H:i') }}</td>
                        <td>{{ booking.status }}</td>
                        <td>
                        <button type="button" id="editBt" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editBooking" name="{{ booking|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-edit"></i></button>
                        <button type="button" id="deleteBt" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteBooking" name="{{ booking|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot></tfoot>
                </table>
                <p></p>
            </div>
        </div>
      </div>
      
<!-- Modal Edit booking -->
<div class="modal fade" id="editBooking">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-editBooking" action="edit_booking" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Edit Booking</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-booking">
            <input type="hidden" id="editBookingID" name="id">
            <label for="bookingCode">Booking Code</label>
            <input type="text" autocomplete="off" class="form-control" id="editBookingCode" name="booking_code" required>
          </div>          
          <div class="form-booking">
            <label for="bookingName">Booking Name</label>
            <input type="text" autocomplete="off" class="form-control" id="editBookingName" name="booking_name" required>
          </div>
        </div>            
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Modal Delete booking -->
<div class="modal fade" id="deleteBooking">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-deleteBooking" action="delete_booking" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Delete Booking</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-product">
            <input type="hidden" id="deleteBookingID" name="id">
            <label for="bookingNname">Do you want to delete booking: <span id="deleteBookingName"></span></label>
          </div>                 
          
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger">Delete</button>
          <button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>

{% endblock %}